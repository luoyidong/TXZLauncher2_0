<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/app_ly"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/icon_ly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/app_icon_iv"
                    android:layout_width="@dimen/dimen_quick_app_size"
                    android:layout_height="@dimen/dimen_quick_app_size"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/x5"
                    android:layout_marginLeft="@dimen/dimen_quick_app_margin"
                    android:layout_marginRight="@dimen/dimen_quick_app_margin"
                    android:layout_marginTop="@dimen/dimen_quick_app_margin" />

                <ImageView
                    android:id="@+id/close_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:minHeight="@dimen/dimen_app_close_icon_size"
                    android:minWidth="@dimen/dimen_app_close_icon_size"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_app_close"
                    android:visibility="gone" />
            </FrameLayout>

            <TextView
                android:id="@+id/app_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/icon_ly"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:maxEms="4"
                android:singleLine="true"
                android:textColor="@color/color_quick_name"
                android:textSize="@dimen/dimen_quick_name_size" />
        </RelativeLayout>
    </FrameLayout>
</FrameLayout>