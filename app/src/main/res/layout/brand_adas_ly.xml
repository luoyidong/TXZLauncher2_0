<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/logo_status_ly"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1">

    <TextView
        android:id="@+id/speed_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_brand_adas_speed_top"
        android:text="60"
        android:textColor="@color/color_brand_adas_speed"
        android:textSize="@dimen/dimen_brand_adas_speed_size" />

    <TextView
        android:id="@+id/speed_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/speed_tv"
        android:layout_centerHorizontal="true"
        android:text="km/h"
        android:textColor="@color/color_brand_adas_status"
        android:textSize="@dimen/dimen_brand_adas_status_size" />

    <ImageView
        android:id="@+id/icon_iv"
        android:layout_width="@dimen/dimen_brand_adas_icon_width"
        android:layout_height="@dimen/dimen_brand_adas_icon_height"
        android:layout_below="@id/speed_unit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_brand_adas_icon_top"
        android:scaleType="centerInside"
        android:src="@drawable/brand_icon_adas_car" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/brand_icon_adas_ind" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dimen_card_content_padding"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/week_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="周五"
            android:textColor="@color/color_brand_adas_time"
            android:textSize="@dimen/dimen_brand_adas_time_size" />

        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/brand_text_lr_margin"
            android:text="下午14:21"
            android:textColor="@color/color_brand_adas_time"
            android:textSize="@dimen/dimen_brand_adas_time_size" />
    </LinearLayout>
</RelativeLayout>